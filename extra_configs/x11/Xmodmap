! remove modifier keys
!clear mod5


! ZenkakuHankaku to Escape
keycode  49 = Escape NoSymbol Escape

clear mod3
clear mod4
clear mod5
keycode 102 = Mode_switch
keycode 100 = Hyper_L
add mod3 = Mode_switch
add mod4 = Super_L Super_R Super_L
add mod5 = Hyper_L

